#include <stdio.h>
#include <conio.h>
#include <stdlib.h> 
#include <time.h>
#include <math.h>
#include <locale.h>

int main()
{
	setlocale(LC_ALL, "Rus");
	double max = 0.0, min = 0.0, sum = 0.0;
	double *num;
	int n = 0, n1 = 0, i = 0, fr = 0, k = 0, j = 0;

	printf("Количество чисел n: ");
	scanf_s("%d", &n);
	n1 = n;
	do {
		n1 = n1 / 10;
		k++;
	} while (n1 > 0);

	printf("В диапозоне от: ");
	scanf_s("%lf", &min);

	printf("До: ");
	scanf_s("%lf", &max);

	//чтобы программа всегда генерировала разные числа
	num = (double*)malloc(n * sizeof(double));
	for (i = 0; i < n; i++)
	{
		num[i] = min + (double)rand() / RAND_MAX * (max - min);
		printf("%lf\n", num[i]);
	}
	for (j = 0; j < n; j++)
	{

		fr = (num[j] - (int)num[j]) * pow(10, k);
		fr = (int)fr;
		printf("%d ", fr);
		if (fr < n)
		{
			sum = sum - num[j];
		}
		else
		{
			sum = sum + num[j];
		}

	}
	printf("\nsum = %lf", sum);
	return 0;
}
